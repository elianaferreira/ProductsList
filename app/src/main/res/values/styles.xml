<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NormalText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="BoldText" parent="NormalText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Title" parent="BoldText">
        <item name="android:textSize">@dimen/title</item>
    </style>

    <style name="StrikethroughText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:foreground">@drawable/strikethrough</item>
    </style>

    <style name="Badge" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/minor_text_size</item>
        <item name="android:background">@drawable/badge</item>
        <item name="android:paddingStart">@dimen/minor_margin</item>
        <item name="android:paddingEnd">@dimen/minor_margin</item>
    </style>
</resources>